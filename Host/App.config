<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.1" />
  </startup>
  <system.serviceModel>        
    <behaviors>
      <!--Предоставляет метаданные в виде файла WSDL для создания прокси-классов на клиенте-->
      <serviceBehaviors>
        <behavior name="AnimalMetadataBehavior">
          <serviceMetadata httpGetEnabled="true" httpGetUrl="http://localhost:9876/AnimalService/MEX" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="AnimalMetadataBehavior" name="AnimalService.AnimalService">
        <endpoint address="http://localhost:9876/AnimalService" binding="basicHttpBinding"
          bindingConfiguration="" contract="AnimalService.AnimalService" />
      </service>
    </services>    
  </system.serviceModel>
  <connectionStrings>
    <add name="DbConnection"
         connectionString="Data Source=(localdb)\mssqllocaldb;AttachDbFilename=|DataDirectory|\DatabaseAnimal.mdf;Integrated Security=True"
         providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>